                        method: 'get',
                        success: function(result) {
                            if (!result.booked) {
                                $('#modal-text').html(`<h4> Permanently delete this Byn? </h4><br/>
                                <form role="form" action="/deleteByn/${id}" method="get">
                                    <input class="btn btn-xl" type="submit" value="Confirm Delete" />
                                </form>`);
                            }
                            else {
                                $('#modal-text').html(`<h4> Hold up!</h4><p> This Byn has an existing booking! <br/> Please cancel all current bookings in the Manage Bookings tab before deleting. </p>`);
